<body>
  <div id="loader">

  </div>
  <%- include('partials/navbar2')%>

<!-- <%= data %> -->
      <section style="background-color: #01867632;">
        <div class="container py-5">
          <div class="row">
            <div class="col">
              <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                <ol class="breadcrumb mb-0">
                  <!-- <li class="breadcrumb-item"><a href="/hiredo/home">Home</a></li> -->
                  <li class="breadcrumb-item active" aria-current="page">Worker Profile</li>
                  <li style="margin-left: 870px;">
                    <form action="/hiredo/worker/<%=data._id%>" method="post">
                        <button id="but" type="submit">
                            Edit Profile
                        </button>
                    </form>
                    
                    
                </li>
                </ol>
              </nav>
            </div>
          </div>
      
          <div class="row">
            <div class="col-lg-4">
              <div class="card mb-4">
                <div class="card-body text-center">
                  <img src="<%=data.photo%>" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;height: 150px;">
                  <h5 class="my-3"><%=data.name%></h5>
                  <p class="text-muted mb-1"><%=data.designation%></p>
                  <p class="text-muted mb-4"><%=data.city%>,<%=data.state%></p>
                </div>
              </div>
              <div class="card mb-4 mb-lg-0">
                <div class="card-body">
                    <h5 class="card-text">About</h5>
                    <p></p>
                    <%=data.about%>.
                </div>
              </div>
            </div>


            <div class="col-lg-8">
              <div class="card mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Full Name</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=data.name%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Designation</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=data.designation%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Email</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=data.email%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Age</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=data.age%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Gender</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=data.gender%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Expected Pay</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=data.charges%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Phone</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=data.phone%></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Address</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0"><%=data.city%>,<%=data.state%></p>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="row">
                <div class="col-md-6">
                  <div class="card mb-4 mb-md-0">
                    <div class="card-body">
                        <h5 class="card-text">CovidFile</h5>
                        <p></p>
                        <form method="post">
                          <button id="but" type="submit" class="btn btn-success p-2">
                            <a style="text-decoration: none;" target="_blank" href="<%=data.covidfile%>">View file</a>
                          </button>
                           
                        </form>
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="card mb-4 mb-md-0">
                    <div class="card-body">
                        <h5 class="card-text">PoliceFile</h5>
                        <p></p>
                        <form method="post">
                          <button id="but" type="submit" class="btn btn-success p-2">
                            <a style="text-decoration: none;" target="_blank" href="<%=data.policefile%>">View File</a>
                          </button>
                           
                        </form>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </section>
<br><br>
<%- include('partials/contact')%>

</body>
</html>